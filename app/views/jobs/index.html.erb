<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Value</th>
      <th>Previous complete</th>
      <th>This application</th>
      <th>Completed to date percent</th>
      <th>Completed to date value</th>
      <th>Scope cycle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.description %></td>
        <td><%= job.value %></td>
        <td><%= job.previous_complete %></td>
        <td><%= job.this_application %></td>
        <td><%= job.completed_to_date_percent %></td>
        <td><%= job.completed_to_date_value %></td>
        <td><%= job.scope_cycle_id %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

