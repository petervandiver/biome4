<p id="notice"><%= notice %></p>


<div class="page-header">

		<div>
			<h3>
			  <%= @organization.name %>
			</h3>
		</div>
		<%= link_to 'Edit', edit_organization_path(@organization) %> 
		<p>
		  <strong>Description:</strong>
		  <%= @organization.description %>
		</p>

		<p>
		  <strong>Federal Tax ID:</strong>
		  <%= @organization.fed_tax_id %>
		</p>

		<p>
		  <strong>HQ Zip:</strong>
		  <%= @organization.hq_zip %>
		</p>

		<p>
		  <strong>Field of work:</strong>
		  <%= @organization.field.name %>
		</p>

		<p>
		  <strong>Annual revenue:</strong>
		  <%= @organization.annual_rev.range %>
		</p>

		<p>
		  <strong>Organization Size:</strong>
		  <%= @organization.org_size.range %>
		</p>
</div>


<div>
	<h4>Projects led by <%= @organization.name %></h4>
	<%= link_to 'New Project', new_project_path %>

			<div class='table-responsive'>
				<table class='table table-striped'>
				  <thead>
				    <tr>
				      <th>Name</th>
				      <th>Description</th>
				      <th>Organization</th>
				      <th>Project number</th>
				      <th>Estimated spend</th>
				      <th>Square feet</th>
				      <th>Building type</th>
				      <th>Start date</th>
				      <th>End date</th>
				      <th>Project address</th>
				      <th>Project zip</th>
				      <th colspan="3"></th>
				    </tr>
				  </thead>

  					<tbody>
  					  <% @projects.each do |project| %>
  					    <tr>
  					      <td><%= project.name %></td>
  					      <td><%= project.description %></td>
  					      <td><%= project.organization.name %></td>
  					      <td><%= project.project_number %></td>
  					      <td><%= project.estimated_spend %></td>
  					      <td><%= project.square_feet %></td>
  					      <td><%= project.building_type.name %></td>
  					      <td><%= project.start_date %></td>
  					      <td><%= project.end_date %></td>
  					      <td><%= project.project_address %></td>
  					      <td><%= project.project_address_zip %></td>
  					      <td><%= link_to 'Show', project_scopes_scopes_path(:project_id => project.id) %></td>
  					    </tr>
  					  <% end %>
  					</tbody>
				</table>
			</div>
</div>
