
<%= render 'scopes/scope_blurb' %>

<p>
<h4 style='display:inline'>Current Cycle</h4>&nbsp;&nbsp;&nbsp;&nbsp; 
<%= link_to 'start new cycle', new_scope_cycle_path(:scope_id => @scope.id)%> &nbsp;|&nbsp; 
<%= link_to 'past cycles' %> 

</p>
<p>

  <strong>Cycle timeframe:</strong>
  <%= @scope_cycle.cycle_start_date %> to <%= @scope_cycle.cycle_end_date %>  
</p>

<p>
  <strong>Owner approved:</strong>
  <%= @scope_cycle.owner_approved %>
</p>

<p>
  <strong>Contributor approved:</strong>
  <%= @scope_cycle.contributor_approved %>
</p>

<p>
  <strong>Original contract amt:</strong>
  <%= @scope_cycle.original_contract_amt %>
</p>

<p>
  <strong>Completed to date total:</strong>
  <%= @scope_cycle.completed_to_date_total %>
</p>

<p>
  <strong>Stored materials total:</strong>
  <%= @scope_cycle.stored_materials_total %>
</p>

<p>
  <strong>Retainage:</strong>
  <%= @scope_cycle.retainage %>
</p>

<p>
  <strong>Less owner purchases:</strong>
  <%= @scope_cycle.less_owner_purchases %>
</p>

<p>
  <strong>Less previous pay request:</strong>
  <%= @scope_cycle.less_previous_pay_request %>
</p>

<p>
  <strong>Amount due:</strong>
  <%= @scope_cycle.amount_due %>
</p>


<div>
<% if @scope_cycle.jobs.blank? %>
    <%= link_to 'Create Schedule of Values', jobs_path(:scope_cycle_id => @scope_cycle.id) %>
<% else %>

    <br />
    <a href='#' id="toggle-cycle-jobs"> Schedule of Values </a>
    <div style="display:none" id='cycle-jobs'>
    	<%= render 'cycle_jobs' %>
    </div>

<% end %>
</div>
<br />
<div>
<% if @scope_cycle.stored_materials.blank? %>
    <%= link_to 'Create Materials Stored', stored_materials_path(:scope_cycle_id => @scope_cycle.id) %>
<% else %>

<a href='#' id="toggle-cycle-stored-materials"> Materials Stored </a>
<div style="display:none" id='cycle-stored-materials'>
	<%= render 'cycle_stored_materials' %>
</div>

<% end %>
</div>
<br />

<div>
<% if @scope_cycle.documents.blank? %>
    <%= link_to 'Upload Documents', documents_path(:scope_cycle_id => @scope_cycle.id) %>
<% else %>

<a href='#' id="toggle-cycle-documents"> Documents </a>
<div style="display:none" id='cycle-documents'>
	<%= render 'cycle_documents' %>
</div>

<% end %>
</div>
